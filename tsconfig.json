{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "components": ["src/components"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/tests/*"]
}
