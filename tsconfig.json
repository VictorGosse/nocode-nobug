{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/tests/*"]
}
